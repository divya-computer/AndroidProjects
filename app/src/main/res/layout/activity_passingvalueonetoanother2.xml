<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="EachSingle.Passingvalueonetoanother2"
    android:background="#E35A5A">

    <TextView
        android:id="@+id/idTextActivity2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is Activity 2"
        android:textSize="35dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/idbtnActivity2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idTextActivity2"
        android:text="Goto Activity 1"
        android:onClick="btnClickAct2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

</RelativeLayout>