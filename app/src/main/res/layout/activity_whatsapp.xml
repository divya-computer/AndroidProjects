<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="EachSingle.WhatsappActivity">

    <Button
        android:id="@+id/idWhatsapp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click to Whatsapp"
        android:textSize="20sp"
        android:onClick="btnWhatsapp"
        android:layout_marginTop="20sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20sp"
        android:text="This will only Work if You have Installed Whatsapp in Your Device otherwise will not work"
        android:textSize="30dp"
        android:layout_margin="10dp"/>

</RelativeLayout>