<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="EachSingle.ColorPickerActivity"
    android:orientation="vertical">

    <!--Select Any color from here-->
    <ImageView
        android:id="@+id/imageViewColorPicker"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/colorpick"/>

    <!--Set the picked color to this view -->
    <View
        android:id="@+id/colorViewCP"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <!--set HEX , RGB value of picked color-->
    <TextView
        android:id="@+id/resultTvCP"
        android:text="HEX: \nRGB: "
        android:layout_width="match_parent"
        android:textSize="18dp"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"/>

</LinearLayout>